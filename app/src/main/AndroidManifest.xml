<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.njupt.wilson.smartlearning" >

    <!-- 使用网络功能所需权限-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" ></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>
    <uses-permission android:name="andriod.permission.CHANGE_WIFI_STATE"></uses-permission>

    <!-- SD卡读写权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".application.CustomerApplication"
        android:allowBackup="true"
        android:icon="@drawable/desktop_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity_"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 注册 -->
        <activity android:name=".activity.RegisterActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <!-- 登录 -->
        <activity android:name=".activity.LoginActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <!-- 主界面 -->
        <activity android:name=".activity.InitActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <!-- 个人中心 -->
        <activity android:name=".activity.PersonalInfoActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <!-- 问题列表 -->
        <activity android:name=".activity.MyQuestionActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <!-- 退出登录 -->
        <activity android:name=".activity.LogoutActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <!-- 发布主题 -->
        <activity
            android:name=".activity.AddThemeActivity_"
            android:label="@string/title_activity_add_theme" >
        </activity>

        <!-- 修改个人资料 -->
        <activity android:name=".activity.ModifyNameActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <activity android:name=".activity.ModifySexActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <activity android:name=".activity.ModifyHeadPhotoActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <!-- 评论 -->
        <activity android:name=".activity.ReplyActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <!-- 评论详情 -->
        <activity android:name=".activity.AnswerDetailActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <!-- 消息详情 -->
        <activity android:name=".activity.MessageDetailActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar"/>

        <!-- 课程详情 -->
        <activity android:name=".activity.CourseInfoDetailActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <!-- 视频信息 -->
        <activity android:name=".activity.VideoInfoActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <!-- 视频播放 -->
        <activity android:name=".activity.VideoPlayActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

    </application>

</manifest>
